<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity">

    <Button
        android:id="@+id/buttonChart"
        android:layout_width="312dp"
        android:layout_height="108dp"
        android:text="@string/sepet"
        app:backgroundTint="#870000"
        app:icon="@drawable/shopping_cart"
        app:iconTint="@color/simgeler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDrink" />

    <Button
        android:id="@+id/buttonDrink"
        android:layout_width="312dp"
        android:layout_height="108dp"
        android:background="#FF5722"
        android:text="@string/icecek"
        app:backgroundTint="#bf360c"
        app:icon="@drawable/drink"
        app:iconTint="@color/yazÄ±lar"
        app:layout_constraintBottom_toTopOf="@+id/buttonChart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEat" />

    <Button
        android:id="@+id/buttonEat"
        android:layout_width="312dp"
        android:layout_height="108dp"
        android:background="#FF2224"
        android:text="@string/yemek"
        app:backgroundTint="#f9683a"
        app:icon="@drawable/food"
        app:iconTint="@color/ustbarvebutton"
        app:layout_constraintBottom_toTopOf="@+id/buttonDrink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>